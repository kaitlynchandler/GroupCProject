<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#186F69"
    tools:context=".createAQuiz">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textColor="#EAEAEA"
        android:textSize="80sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/subTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_a_quiz"
        android:textColor="#EAEAEA"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter quiz name below:"
        android:textColor="#EAEAEA"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/quizName"
        android:hint="Name of the Quiz"
        android:textAlignment="center"
        android:textColorHint="#EAEAEA"
        android:textSize="25sp"
        android:textColor="#EAEAEA"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ediittext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter number of questions below:"
        android:textColor="#EAEAEA"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/quizQuestions"
        android:hint="Number of questions"
        android:textAlignment="center"
        android:textColorHint="#EAEAEA"
        android:textSize="25sp"
        android:textColor="#EAEAEA"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ediittext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the due date below (MM/DD/YYYY):"
        android:textColor="#EAEAEA"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/dueDate"
        android:hint="(MM/DD/YYYY)"
        android:textAlignment="center"
        android:textColorHint="#EAEAEA"
        android:textSize="25sp"
        android:textColor="#EAEAEA"
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ediittext"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the deadline time below:"
        android:textColor="#EAEAEA"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/dueTime"
        android:hint="00:00 pm"
        android:textAlignment="center"
        android:textColorHint="#EAEAEA"
        android:textSize="25sp"
        android:textColor="#EAEAEA"
        android:inputType="time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ediittext"/>

</LinearLayout>